<?xml version="1.0" encoding="UTF-8"?>
<!-- <beans default-lazy-init="true"> no beans will be pre-instantiated..</beans> -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-lazy-init="true">

	<description>Spring配置 </description>
	<bean id="constructorBean3"
		class="com.depp.stone.spring.bean.instantiation.ConstructorBean"></bean>
	<bean id="constrtorBean" class="com.depp.stone.spring.bean.instantiation.ConstrtorBean">
		<constructor-arg type="java.lang.String" value="bruce"></constructor-arg>
		<constructor-arg type="int" value="1985"></constructor-arg>
		<constructor-arg>
			<bean class="com.depp.stone.spring.bean.instantiation.Bar"></bean>
		</constructor-arg>
	</bean>
	<bean id="constrtorBean2" class="com.depp.stone.spring.bean.instantiation.ConstrtorBean">
		<constructor-arg index="0" value="bruce"></constructor-arg>
		<constructor-arg index="1" value="1985"></constructor-arg>
		<constructor-arg index="2">
			<bean class="com.depp.stone.spring.bean.instantiation.Bar"></bean>
		</constructor-arg>
	</bean>
	<bean id="instance"
		class="com.depp.stone.spring.bean.instantiation.StaticFactoryBean"
		factory-method="createInstance" />
	<bean id="methodInstance"
		class="com.depp.stone.spring.bean.instantiation.InstanceFactoryMethod" />
	<bean id="instance2" factory-bean="methodInstance" factory-method="createInstance" />

	<bean id="bar" class="com.depp.stone.spring.bean.instantiation.Bar" />
	<bean name="foo" class="com.depp.stone.spring.bean.instantiation.Foo" />

	<bean id="bean" class="com.depp.stone.spring.bean.instantiation.Bean">
		<property name="bar">
			<ref local="bar" />
		</property><!-- id -->
		<property name="foo">
			<ref bean="foo" />
		</property><!-- id or name -->
		<property name="property">
			<idref local="bar" />
		</property><!-- string,bean's id -->
	</bean>

	<!-- collection bean -->
	<bean id="collectionBean" class="com.depp.stone.spring.bean.instantiation.CollectionBean">
		<property name="list">
			<list>
				<value>a</value>
				<value>a</value>
				<value>b</value>
				<ref local="bar"></ref>
			</list>
		</property>
		<property name="properties">
			<props>
				<prop key="admin">admin</prop>
			</props>
		</property>
		<property name="map">
			<map>
				<entry>
					<key>
						<value>key</value>
					</key>
					<value>value</value>
				</entry>
			</map>
		</property>
		<property name="set">
			<set>
				<value>2</value>
				<value>3</value>
				<value>aa</value>
			</set>
		</property>
	</bean>
	<bean id="objectNull" class="com.depp.stone.spring.bean.instantiation.Bean">
		<property name="bar">
			<null />
		</property>
	</bean>
	<bean id="pNamespaceBean" p:property="pNamespaceProperty"
		p:bar-ref="bar" class="com.depp.stone.spring.bean.instantiation.Bean">
	</bean>
	<bean id="singletonBean" class="com.depp.stone.spring.bean.instantiation.Bean"
		scope="singleton" />
	<bean id="prototypeBean" class="com.depp.stone.spring.bean.instantiation.Bean"
		scope="prototype" />

	<bean id="commander" class="com.depp.stone.spring.bean.instantiation.Commander"
		scope="prototype" />
	<bean id="lookupBean" class="com.depp.stone.spring.bean.instantiation.LookupBean">
		<lookup-method name="createCommander" bean="commander" />
	</bean>
	<bean id="initBean" class="com.depp.stone.spring.bean.instantiation.InitBean"
		init-method="init" />
	<bean id="resourceBean" class="com.depp.stone.spring.bean.instantiation.ResourceBean">
		<property name="resource" value="classpath:com.depp.stone.spring.bean.instantiation.InstantiatingBeanTest-context.xml" ></property>
	</bean>
</beans>